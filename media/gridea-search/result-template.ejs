<div class="content-container" data-aos="fade-up">
  <% posts.forEach(function(post) { %>
    <article class="post-item">
      <div class="left">
        <a href="<%= post.link %>">
          <h2 class="post-title"><%= post.title %></h2>
        </a>
        <div class="gt-post-content post-abstract gt-c-content-color-second">
          <p><%- post.searchedPreview %></p>
        </div>
        <div class="post-date">
          <%= post.dateFormat %> |
          <% post.tags.forEach(function(tag) { %>
            <a href="<%= tag.link %>" class="post-tag">
              # <%= tag.name %>
            </a>
          <% }); %>
        </div>
        <!-- <div class="post-abstract">
          <%- post.abstract %>
        </div> -->
      </div>
      <% if (themeConfig.showFeatureImage && post.feature) { %>
        <a class="right" href="<%= post.link %>">
          <div class="feature-container" style="background-image: url('<%= post.feature %>')">
          </div>
        </a>
      <% } %>
    </article>
  <% }); %>
</div>
